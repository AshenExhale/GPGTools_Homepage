<?php
	$location='http://www.gpgtools.org/';
	if (count($_GET) == 1 && current($_GET) == "") {
		$project = key($_GET);
		if (preg_match('/^[0-9a-z]+$/', $project)) {
			$fileContent = @file_get_contents('http://www.gpgtools.org/' . $project . '_download_url.html');
			if ($fileContent) {
				$location = trim($fileContent);
			}
		}
	}
	
	header('HTTP/1.1 303 See Other');
	header('Location: ' . $location);
?>

<html>
	<head>
		<?php
			echo '<meta http-equiv="refresh" content="2; URL=' . $location . '">'
		?>
	</head>
	<body>
		<p>
			If the download does not start automatically you can click here: 
			<?php
				echo '<a href="' . $location . '">' . $location . '</a>';
			?>
		</p>
	</body
</html>
